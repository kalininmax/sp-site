{% from "../components/system/component.njk" import component %}

<!DOCTYPE html>
<html class="page _loading{% if template %}{{ template }}{% endif %}" lang="{{ site.lang }}">

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="color-scheme" content="light dark">
	<meta name="theme-color" content="#eee" media="(prefers-color-scheme: light)">
	<meta name="theme-color" content="#111213" media="(prefers-color-scheme: dark)">

	<title>
	{% block title %}
		{% if title %}
			{{ title }} | {{ site.title }}
		{% else %}
			{{ site.title }}
		{% endif %}
	{% endblock %}
	</title>

	<meta name="description" content="{{ site.desc }}">

	<link rel="preload" href="/assets/fonts/Roboto-Regular.woff2" as="font" type="font/woff2" crossorigin>
	<link rel="preload" href="/assets/fonts/Roboto-Bold.woff2" as="font" type="font/woff2" crossorigin>

	<link rel="stylesheet" href="/assets/styles/light-theme.css" media="(prefers-color-scheme: light)">
	<link rel="stylesheet" href="/assets/styles/dark-theme.css" media="(prefers-color-scheme: dark)">
	<link rel="stylesheet" href="/assets/styles/styles.css?{% hash %}">

	{% include "./_favicons.njk" %}
	{% include "./_head-scripts.njk" %}

	<script defer src="/assets/scripts/bundle.js?{% hash %}"></script>
</head>

<body class="page__body">
	{% block content %}{% endblock %}
</body>

</html>
